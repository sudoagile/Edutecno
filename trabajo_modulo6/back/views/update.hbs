{{!< layout}}


<div class="container mt-5">
  <h2>Actualizar Anime</h2>
  <form action="/anime/{{anime.id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="nombre">Nombre del Anime:</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="{{anime.nombre}}" required>
    </div>
    <div class="form-group">
      <label for="autor">Autor:</label>
      <input type="text" class="form-control" id="autor" name="autor" value="{{anime.autor}}" required>
    </div>
    <!-- Agrega más campos según necesites -->
    <button type="submit" class="btn btn-success">Actualizar</button>
  </form>
</div>
